    <!-- Button Styles -->
    <style name="primary_blue_button" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/primary_blue_button_background_selector</item>
        <item name="android:textAppearance">@style/OpenSansSemiBold14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Button Styles -->
    <style name="negative_red_button" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/negative_red_button_background_selector</item>
        <item name="android:textAppearance">@style/OpenSansSemiBold14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="GenderSelectionToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansSemiBold14sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/toggle_button_stroke_color_selector</item>
        <item name="android:textColor">@color/toggle_button_text_color_selector</item>
        <item name="rippleColor">@color/grey_AEAEAE</item>
    </style>

    <style name="StrokeButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansSemiBold14sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/grey_4F4F4F</item>
        <item name="android:textColor">@color/toggle_button_text_color_selector</item>
        <item name="rippleColor">@color/grey_AEAEAE</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/OpenSansSemiBold14sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/grey_AEAEAE</item>
    </style>

</resources>