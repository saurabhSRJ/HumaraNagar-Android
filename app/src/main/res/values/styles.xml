    </style>

    <style name="OpenSansBold10sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="OpenSansBold12sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="OpenSansBold14sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
