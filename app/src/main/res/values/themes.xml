<resources>
    <!-- Base application theme. -->
    <style name="Theme.HumaraNagar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_4285F4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_4285F4</item>
        <item name="colorSecondaryVariant">@color/blue_4285F4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Activity theme -->
    <style name="ActivityTheme" parent="Theme.HumaraNagar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="OpenSansRegular10sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansRegular12sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansRegular14sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansRegular16sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansSemiBold10sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="OpenSansSemiBold12sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="OpenSansSemiBold14sp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
