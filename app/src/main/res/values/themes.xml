<resources>
    <!-- Base application theme. -->
    <style name="Theme.HumaraNagar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="FilterChips">@style/FilterChipStyle</item>
        <!-- Bottom sheet theme -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
    </style>

    <!-- Activity theme -->
    <style name="ActivityTheme" parent="Theme.HumaraNagar">
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.HumaraNagar">
        <item name="android:windowBackground">@color/primary_background</item>
        <item name="android:statusBarColor">@color/primary_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--todo add some icon here-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="postSplashScreenTheme">@style/SplashActivityTheme</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="windowSplashScreenBackground">@color/primary_background</item>
    </style>

</resources>