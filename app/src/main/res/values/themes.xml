    <!-- Button Styles -->
    <style name="primary_blue_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/primary_blue_button_background_selector</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>