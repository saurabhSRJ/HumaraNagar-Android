<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rect_white_fill_grey_outline_5dp"
        android:padding="16dp">

        <View
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/state_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <View
            android:id="@+id/categoryTV"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <View
            android:id="@+id/tvResidentName"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/categoryTV" />

        <View
            android:id="@+id/resolvedTV"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@id/tvResidentName" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/grey_E4E4E4"
            app:layout_constraintBottom_toBottomOf="@+id/state_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/resolvedTV"
            app:layout_constraintTop_toTopOf="@+id/state_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>