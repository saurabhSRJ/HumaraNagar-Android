<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.report.complaint_status.ComplaintStatusFragment">

        <!--Toolbar-->
        <include
            android:id="@+id/includedToolbar"
            layout="@layout/toolbar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="20dp"
            app:layout_goneMarginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/rate_this_service_TV"
            app:layout_constraintTop_toBottomOf="@+id/includedToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/complaintStatus_ConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/black_with_opacity_20"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    tools:layout_editor_absoluteX="-142dp">

                    <TextView
                        android:id="@+id/categoryTV"
                        style="@style/OpenSansSemiBold20sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toStartOf="@+id/cardTickedID"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/category" />

                    <TextView
                        android:id="@+id/localityTV"
                        style="@style/OpenSansRegular16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/grey_4F4F4F"
                        app:layout_constraintEnd_toEndOf="@+id/categoryTV"
                        app:layout_constraintStart_toStartOf="@+id/categoryTV"
                        app:layout_constraintTop_toBottomOf="@+id/categoryTV"
                        tools:text="@string/locality" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTickedID"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        app:cardBackgroundColor="@color/card_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/complaintIdTV"
                            style="@style/OpenSansSemiBold12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:enabled="false"
                            android:textColor="@color/black"
                            tools:text="@string/ticketID_example" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="@+id/localityTV"
                        app:layout_constraintTop_toBottomOf="@+id/localityTV"
                        app:srcCompat="@drawable/garbage_disposal" />

                    <TextView
                        android:id="@+id/descriptionTV"
                        style="@style/OpenSansRegular14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/grey_4F4F4F"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintEnd_toEndOf="@+id/cardTickedID"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        tools:text="@string/premission_required_description" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="@+id/imageView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:srcCompat="@drawable/ic_location_on" />

                    <TextView
                        android:id="@+id/locationTV"
                        style="@style/OpenSansSemiBold16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintEnd_toEndOf="@+id/descriptionTV"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        tools:text="@string/location" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/complaint_initiator_details_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="complaintInitiatorIV, complaintInitiatorNameTV, callComplaintInitiatorCard"
                        app:layout_constraintStart_toStartOf="@+id/imageView2" />

                    <ImageView
                        android:id="@+id/complaintInitiatorIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:srcCompat="@drawable/man_user_icon" />

                    <TextView
                        android:id="@+id/complaintInitiatorNameTV"
                        style="@style/OpenSansSemiBold16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/complaintInitiatorIV"
                        app:layout_constraintStart_toEndOf="@+id/complaintInitiatorIV"
                        app:layout_constraintTop_toTopOf="@+id/complaintInitiatorIV"
                        tools:text="@string/name" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/callComplaintInitiatorCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintBottom_toBottomOf="@+id/complaintInitiatorNameTV"
                        app:layout_constraintStart_toEndOf="@+id/complaintInitiatorNameTV"
                        app:layout_constraintTop_toTopOf="@+id/complaintInitiatorNameTV">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginVertical="10dp"
                                app:srcCompat="@drawable/ic_call_24"
                                app:tint="@color/blue_4285F4" />

                            <TextView
                                style="@style/OpenSansSemiBold14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/call"
                                android:textColor="@color/blue_4285F4" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/black_with_opacity_20"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    tools:layout_editor_absoluteX="0dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    tools:layout_editor_absoluteX="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="3"
                        tools:listitem="@layout/stepper_item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/buttonCTA"
            style="@style/negative_red_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/withdraw"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!--LinearLayout
            android:id="@+id/rateThisServiceLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"-->

        <androidx.constraintlayout.widget.Group
            android:id="@+id/rate_service_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="rate_this_service_TV, ratingBar"/>


        <TextView
            android:id="@+id/rate_this_service_TV"
            style="@style/OpenSansSemiBold20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/rate_this_service"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="@+id/ratingBar" />

        <com.humara.nagar.ui.custom_views.SvgRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:minHeight="28dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar_full"
            android:rating="0"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2" />

        <!--/LinearLayout-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>