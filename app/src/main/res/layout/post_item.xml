<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <include
                android:id="@+id/postHeader"
                layout="@layout/layout_post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/postContent"
                style="@style/OpenSansRegular14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/grey_555555"
                app:animation_duration="500"
                app:layout_constraintTop_toBottomOf="@id/postHeader"
                tools:text="Hello, I am looking for a new career opportunity and would appreciate your support. Thanks in advance for any contact recommendation, advice, or" />

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/postContent" />

            <include
                android:id="@+id/postFooter"
                layout="@layout/layout_post_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ivPostImage" />

            <View
                android:id="@+id/commentDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey_E4E4E4"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/postFooter"
                tools:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/commentDivider"
                tools:itemCount="12"
                tools:listitem="@layout/post_comment_item"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvNoComments"
                style="@style/OpenSansRegular14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/no_comments_yet"
                android:textColor="@color/grey_696969"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/commentDivider" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>