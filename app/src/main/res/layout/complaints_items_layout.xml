<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:paddingBottom="16dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_image_placeholder" />

            <Button
                android:id="@+id/state_btn"
                style="@style/ComplaintStateButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:clickable="false"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:strokeColor="@color/stroke_red"
                tools:text="@string/sent"
                tools:textColor="@color/stroke_red" />

            <TextView
                android:id="@+id/categoryTV"
                style="@style/OpenSansBold16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/grey_4F4F4F"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:text="Garbage Disposal" />

            <TextView
                android:id="@+id/localityTV"
                style="@style/OpenSansSemiBold14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey_828282"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/categoryTV"
                app:layout_constraintStart_toStartOf="@+id/categoryTV"
                app:layout_constraintTop_toBottomOf="@+id/categoryTV"
                tools:text="Deep Chand Mandi" />

            <TextView
                android:id="@+id/resolvedTV"
                style="@style/OpenSansRegular12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey_4F4F4F"
                app:layout_constraintEnd_toEndOf="@+id/localityTV"
                app:layout_constraintStart_toStartOf="@+id/localityTV"
                app:layout_constraintTop_toBottomOf="@+id/localityTV"
                tools:text="Resolution expected by 24th june" />

            <Button
                android:id="@+id/cta_button"
                style="@style/primary_blue_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:padding="10dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/state_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/resolvedTV"
                app:layout_constraintTop_toTopOf="@+id/state_btn"
                tools:text="Track" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>