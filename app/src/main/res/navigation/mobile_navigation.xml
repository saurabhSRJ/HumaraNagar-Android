<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.humara.nagar.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_report"
        android:name="com.humara.nagar.ui.report.ReportFragment"
        android:label="@string/report"
        tools:layout="@layout/fragment_report">
        <action
            android:id="@+id/action_navigation_report_to_complaintsFragment"
            app:destination="@id/complaintsFragment"
            app:popUpTo="@id/navigation_home"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_residents"
        android:name="com.humara.nagar.ui.residents.ResidentsFragment"
        android:label="@string/residents"
        tools:layout="@layout/fragment_residents" />
    <fragment
        android:id="@+id/navigation_certificates"
        android:name="com.humara.nagar.ui.certificates.CertificatesFragment"
        android:label="@string/certificates"
        tools:layout="@layout/fragment_certificates" />
    <fragment
        android:id="@+id/complaintsFragment"
        android:name="com.humara.nagar.ui.report.complaints.ComplaintsFragment"
        android:label="ComplaintsFragment">
        <action
            android:id="@+id/action_complaintsFragment_to_complaintStatusFragment"
            app:destination="@id/complaintStatusFragment" />
    </fragment>
    <fragment
        android:id="@+id/complaintStatusFragment"
        android:name="com.humara.nagar.ui.report.complaint_status.ComplaintStatusFragment"
        android:label="ComplaintStatusFragment" >
        <argument
            android:name="complaint_id"
            app:argType="string" />
        <action
            android:id="@+id/action_complaintStatusFragment_to_imagePreviewFragment"
            app:destination="@id/imagePreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/imagePreviewFragment"
        android:name="com.humara.nagar.ui.common.FullImagePreviewFragment"
        android:label="ImagePreviewFragment" >
        <argument
            android:name="imagesList"
            app:argType="string[]" />
    </fragment>
</navigation>