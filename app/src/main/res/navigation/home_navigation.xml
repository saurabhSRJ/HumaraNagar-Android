<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.humara.nagar.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_fullImagePreviewFragment"
            app:destination="@id/fullImagePreviewFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <action
            android:id="@+id/action_homeFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/fullImagePreviewFragment"
        android:name="com.humara.nagar.ui.common.FullImagePreviewFragment"
        android:label="FullImagePreviewFragment">
        <argument
            android:name="source"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="imagesList"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.humara.nagar.ui.home.post_details.PostDetailsFragment"
        android:label="PostDetailsFragment">
        <action
            android:id="@+id/action_postDetailsFragment_to_fullImagePreviewFragment"
            app:destination="@id/fullImagePreviewFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <argument
            android:name="post_id"
            app:argType="long" />
        <argument
            android:name="source"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>